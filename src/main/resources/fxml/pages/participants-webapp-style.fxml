<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.linguaops.desktop.controller.ParticipantsControllerWebStyle">
  <padding>
    <Insets top="40.0" right="16.0" bottom="40.0" left="16.0" />
  </padding>

  <VBox alignment="CENTER" maxWidth="1200.0" styleClass="card">
    <VBox.margin>
      <Insets left="20.0" right="20.0" />
    </VBox.margin>
    <padding>
      <Insets top="24.0" right="24.0" bottom="24.0" left="24.0" />
    </padding>

    <Label fx:id="titleLabel" styleClass="card-title" text="Manage Participants" />

    <!-- Top buttons -->
    <HBox spacing="8" alignment="CENTER" VBox.margin="20.0">
      <Button fx:id="btnAnmelde" text="Registration Confirmation" onAction="#openAnmelde" />
      <Button fx:id="btnTeilnahme" text="Participation Confirmation" onAction="#openTeilnahme" />
      <Button fx:id="btnAddress" text="Address Post List" onAction="#openAddress" />
    </HBox>

    <!-- Expandable content panel -->
    <VBox fx:id="panel" spacing="12" visible="false" managed="false" styleClass="panel">
      <Label fx:id="panelTitle" styleClass="panel-title" text="" />
      <HBox spacing="12">
        <TextArea fx:id="orderInput" promptText="Order Numberâ€¦ (one per line or mixed text)" prefRowCount="10" VBox.vgrow="ALWAYS" />
        <VBox spacing="8" prefWidth="240">
          <Label fx:id="parsedLabel" text="Parsed: 0" />
          <Button fx:id="actionButton" text="Run" onAction="#runAction" />
        </VBox>
      </HBox>
    </VBox>
  </VBox>
</VBox>
