<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.linguaops.desktop.controller.OrdersController">
   <padding>
      <Insets bottom="40.0" left="20.0" right="20.0" top="40.0" />
   </padding>
   
   <!-- Main Container -->
   <VBox alignment="CENTER" maxWidth="1200.0" styleClass="orders-container">
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin>
      
      <!-- Orders Card -->
      <VBox alignment="CENTER" maxWidth="600.0" styleClass="card">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         
         <!-- Header -->
         <VBox alignment="CENTER" spacing="20" styleClass="card-header">
            <Label fx:id="titleLabel" styleClass="card-title" text="Orders" />
            
            <!-- Action Buttons List -->
            <VBox alignment="CENTER" maxWidth="300.0" spacing="15" styleClass="button-list">
               <Button fx:id="newOrdersButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleNewOrders" styleClass="primary-button" text="New Orders" />
               
               <Button fx:id="searchOrdersButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleSearchOrders" styleClass="secondary-button" text="Search Orders" />
               
               <Button fx:id="exportButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleExport" styleClass="outline-button" text="Export" />
               
               <Button fx:id="openWebsiteButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleOpenWebsite" styleClass="outline-button" text="Open Website" />
            </VBox>
         </VBox>
         
         <!-- Content Area -->
         <VBox alignment="CENTER" spacing="20" styleClass="card-content">
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
            
            <Label fx:id="placeholderLabel" styleClass="placeholder-text" text="Placeholder for new orders UI." />
            
            <!-- Status/Info Area -->
            <VBox fx:id="statusArea" alignment="CENTER" spacing="10" styleClass="status-area" visible="false">
               <Label fx:id="statusLabel" styleClass="status-text" text="" />
               <ProgressIndicator fx:id="progressIndicator" styleClass="progress" visible="false" />
            </VBox>
            
            <!-- Results Area -->
            <VBox fx:id="resultsArea" spacing="15" styleClass="results-area" visible="false">
               <Label fx:id="resultsLabel" styleClass="results-title" text="Results" />
               <ScrollPane fx:id="resultsScrollPane" fitToWidth="true" maxHeight="300.0" styleClass="results-scroll">
                  <VBox fx:id="resultsContainer" spacing="10" styleClass="results-container" />
               </ScrollPane>
            </VBox>
         </VBox>
      </VBox>
   </VBox>
</VBox>
